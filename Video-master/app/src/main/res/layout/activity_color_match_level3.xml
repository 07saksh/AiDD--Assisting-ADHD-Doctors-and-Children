<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".ColorMatch_level3">

    <TextView
        android:id="@+id/cmtext"
        android:gravity="center"
        android:layout_width="413dp"
        android:layout_height="70dp"
        android:background="#A7F2FF"
        android:fontFamily="serif"
        android:text="COLOR MATCH"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <TableRow

        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cmtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/txt"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:fontFamily="serif"
            android:text="Score:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/marks"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:textColor="@android:color/black"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/level"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="LEVEL 3"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:fontFamily="serif"
            android:text="Time:"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:textSize="22sp" />
    </TableRow>

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/table"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">

        <ImageView
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c2"
        android:layout_below="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#c58a6a"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c58a6a">

        <Button
            android:id="@+id/redb"
            android:layout_width="104dp"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/redb" />

        <Button
            android:id="@+id/greenb"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/greenb" />


        <Button
            android:id="@+id/blueb"
            android:layout_width="104dp"
            android:layout_height="84dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/blueb" />
    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:background="#c58a6a">

        <Button
            android:id="@+id/yellowb"
            android:layout_width="104dp"
            android:layout_height="83dp"
            android:background="@drawable/yellowb" />

        <Button
            android:id="@+id/whiteb"
            android:layout_width="100dp"
            android:layout_height="84dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/whiteb" />

        <Button
            android:id="@+id/blackb"
            android:layout_width="104dp"
            android:layout_height="84dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/blackb" />
    </GridLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>